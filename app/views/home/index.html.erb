<div class="mt-4 p-5 bg-light rounded">
    <h1>Welcome to my Pinterested App!</h1>
    <p>Find me in app/views/home/index.html.erb</p>
    <% if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, class: "btn btn-primary", data: { "turbo-method": :delete } %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-secondary" %>
        <%= link_to "List Pins", pins_path, class: "btn btn-secondary" %>
    <% else %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-secondary" %>
        <%= link_to "Join", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>    
</div>
